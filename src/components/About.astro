---
import { map } from "astro/zod";
import Badge from "./Badge.astro";

const technologies = ['JavaScript', 'React', 'React Native', 'TypeScript', 'Tailwind']
---

<section id="about" class="w-full py-12 md:py-24 lg:py-32">
  <div class="container max-w-8xl mx-auto px-4 sm:px-6 md:px-8">
    <div class="flex flex-col items-center space-y-4 text-center">
      <img
            src="/tannus-profile.jpeg"
            alt="Profile Picture"
            width="200"
            height="200"
            class="aspect-square object-cover border border-gray-200 w-48 h-48 rounded-full overflow-hidden dark:border-gray-800"
          />
          <h1 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none">Tannus Esquerdo</h1>
          <p class="mx-auto max-w-[700px] text-gray-500 md:text-xl dark:text-gray-400">
            I'm a Software Developer with over 4 years of experience in building high-quality web applications. I
            specialize in JavaScript and have professional experience working with React and Node.js.
          </p>
          <div class="flex flex-wrap justify-center gap-2">
            {technologies.map(tech => (<Badge text={tech} />))}
          </div>
    </div>
  </div>
</section>
