---
import ThemeIcon from "./ThemeIcon.astro";
import GitHubLink from "./GitHubLink.astro";
---

<div class="sticky top-0 z-40 w-full backdrop-blur flex-none lg:border-b lg:border-gray-200 dark:border-gray-700 bg-white/95 transition-colors duration-500 lg:z-50 supports-backdrop-blur:bg-white/60 dark:bg-transparent">
  <div class="max-w-8xl mx-auto">
    <div class="py-4 border-b border-gray-200 lg:px-8 lg:border-0 dark:border-gray-700 mx-4 lg:mx-0">
      <header class="relative flex items-center">
        <a class="mr-3 flex-none overflow-hidden w-auto" href="/" rel="ugc">
          <span class="font-semibold text-xl">tannus.dev</span>
          <span class="sr-only">Tannus Esquerdo | Software Developer</span>
        </a>
        <div class="relative hidden lg:flex items-center ml-auto">
          <nav class="text-sm leading-6 font-semibold text-gray-800 dark:text-gray-100">
            <ul class="flex space-x-8">
              <li>
                <a class="font-bold" href="#" rel="ugc">
                  About Me
                </a>
              </li>
              <li>
                <a class="text-gray-500 dark:text-gray-400" href="#" rel="ugc">
                  Projects
                </a>
              </li>
              <li>
                <a class="text-gray-500 dark:text-gray-400" href="#" rel="ugc">
                  Experience
                </a>
              </li>
              <li>
                <a class="text-gray-500 dark:text-gray-400" href="#" rel="ugc">
                  Education
                </a>
              </li>
              <li>
                <a class="text-gray-500 dark:text-gray-400" href="#" rel="ugc">
                  Contact
                </a>
              </li>
            </ul>
          </nav>
        </div>
        <div class="ml-auto flex items-center lg:border-l lg:border-gray-200 lg:ml-6 pl-6 lg:dark:border-gray-700">
          <ThemeIcon />
          <GitHubLink />
        </div>
      </header>
    </div>
  </div>
</div>
