---
import Badge from "./Badge.astro";
---

<section id="contact" class="w-full py-12 md:py-24 lg:py-32 bg-gray-100 dark:bg-gray-800">
  <div class="container max-w-8xl mx-auto px-4 sm:px-6 md:px-8">
    <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none text-center mb-10">
      Contact
    </h2>
    <div class="flex flex-col items-center space-y-4 text-center">
      <p class="mx-auto max-w-[600px] text-gray-500 md:text-xl dark:text-gray-400">
        Feel free to reach out if you're looking for a developer, have a question, or just want to connect.
      </p>
      <div class="flex flex-wrap justify-center gap-2">
        <Badge text="Email: tannus.dev@gmail.com">
      </div>
      <div class="flex flex-wrap justify-center gap-2">
        <a class="underline  text-purple-400 dark:text-purple-600" href="https://github.com/tannusesquerdo" title="GitHub" rel="ugc">
          GitHub
        </a>
        <a class="underline text-purple-400 dark:text-purple-600" href="https://www.linkedin.com/in/tannusesquerdo" title="LinkedIn" rel="ugc">
          LinkedIn
        </a>
        <a class="underline text-purple-400 dark:text-purple-600" href="#" title="Twitter" rel="ugc">
          Twitter
        </a>
      </div>
    </div>
  </div>
</section>
